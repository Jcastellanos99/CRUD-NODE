<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js"></script>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/categoria">Categoria</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Producto</a>
              </li>
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
  </head>
  <body>
      <H1 style="text-align: center; color:darkblue" >Productos</H1>
    <div class="container">
      <a href="/createProduct"><box-icon type='solid' name='plus-circle'></box-icon></a>
    </div>
    <table class="table" style="width: 80%; margin-left: 10%;">
        <thead>
            <th style="text-align: center;">ID Producto</th>
            <th style="text-align: center;">Nombre</th>
            <th style="text-align: center;">Precio</th>
            <th style="text-align: center;">Cantidad en Stock</th>
            <th style="text-align: center;">Categoria</th>
            <th style="text-align: center;"> Editar</th>
            <th style="text-align: center;"> Eliminar</th>
        </thead>
        <tbody>
            <% result.forEach((product)=> { %>
            <tr>
                <td style="text-align: center;"><%- product.idProducto %></td>
                <td style="text-align: center;"><%- product.nombreProducto %></td>
                <td style="text-align: center;"><%- product.precio %></td>
                <td style="text-align: center;"><%- product.cantidad %></td>
                <td style="text-align: center;"><%- product.idCategoria %></td>
                <td style="text-align: center;">
                    <a href="/editProduct/<%- product.idProducto %>"><box-icon type='solid' name='pencil'></box-icon></a>
                </td>
                <td style="text-align: center;">
                    <a href="/deleteProduct/<%- product.idProducto %>"><box-icon type='solid' name='trash-alt'></box-icon></a>
                </td>
                
            </tr>
          <% }) %>
        </tbody>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    
  </body>
</html>